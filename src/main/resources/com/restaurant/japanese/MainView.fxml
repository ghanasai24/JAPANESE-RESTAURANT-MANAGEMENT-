<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.japanese.ui.MainViewController">
    <top>
        <AnchorPane prefHeight="50.0" style="-fx-background-color: #333;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="風林火山 Japanese Dining" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="12.0" />
                <Label fx:id="loggedInUserLabel" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Not Logged In" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="15.0" />
                <Button fx:id="cartButton" onAction="#handleCartButton" text="Cart (0)" AnchorPane.rightAnchor="170.0" AnchorPane.topAnchor="10.0" />
                
                <StackPane fx:id="alertButtonPane" visible="false" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="10.0">
                   <children>
                      <Button fx:id="alertButton" onAction="#handleAlerts" text="🔔 Alerts" />
                      <Circle fx:id="alertDot" fill="RED" radius="5.0" stroke="BLACK" strokeType="INSIDE" StackPane.alignment="TOP_RIGHT" />
                   </children>
                </StackPane>
            </children>
        </AnchorPane>
    </top>
    <left>
        <fx:include fx:id="sidebar" source="Sidebar.fxml" />
    </left>
    <center>
        <AnchorPane fx:id="contentArea" style="-fx-background-color: #F5F5DC;" />
    </center>
</BorderPane>