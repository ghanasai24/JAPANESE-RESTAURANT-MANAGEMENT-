<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.japanese.ui.InventoryController">
   <children>
      <Label layoutX="30.0" layoutY="30.0" text="Inventory Management" styleClass="h1-label">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="inventoryTableView" layoutX="30.0" layoutY="80.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="80.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Ingredient Name" />
          <TableColumn fx:id="stockColumn" prefWidth="150.0" text="Current Stock" />
          <TableColumn fx:id="minStockColumn" prefWidth="150.0" text="Minimum Stock" />
          <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="Actions" />
        </columns>
      </TableView>
   </children>
</AnchorPane>