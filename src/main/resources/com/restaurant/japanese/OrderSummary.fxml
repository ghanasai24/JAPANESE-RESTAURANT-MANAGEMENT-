<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.japanese.ui.OrderSummaryController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label styleClass="h1-label" text="Order Summary" />
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="orderItemsVBox" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <Label fx:id="totalPriceLabel" styleClass="h1-label" text="Total: â‚¹0.00" />
            <HBox spacing="20.0">
               <children>
                  <Button fx:id="confirmOrderButton" onAction="#handleConfirmOrder" prefHeight="50.0" prefWidth="300.0" text="Confirm &amp; Send to Kitchen" />
                  <Button fx:id="paymentButton" onAction="#handleProceedToPayment" prefHeight="50.0" prefWidth="200.0" text="Proceed to Payment" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>